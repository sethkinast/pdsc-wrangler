{
  "type": "record",
  "name": "ConversationCreate",
  "namespace": "com.linkedin.voyager.messaging.create",
  "doc": "Create action for conversation",
  "fields": [
    {
      "name" : "recipients",
      "type": {
        "type": "array",
        "items" : "string"
      },
      "doc": "Recipients of this conversation message as NIID's"
    },
    {
      "name": "subject",
      "type": "string",
      "optional": true,
      "doc": "Subject of the first event in this conversation. Should not be used except for InMail's."
    },
    {
      "name": "eventCreate",
      "type": "com.linkedin.voyager.messaging.create.EventCreate",
      "doc": "Event required for creating conversation"
    },
    {
      "name": "subtype",
      "type" : "com.linkedin.voyager.messaging.event.EventSubtype",
      "default": "MEMBER_TO_MEMBER",
      "doc": "Subtype of the event - in practice derived from the message type (ex. InMail, Group, etc)"
    },
    {
      "name": "name",
      "type": "string",
      "optional": true,
      "doc": "Name of the conversation as set by the initial conversation creator"
    }
  ]
}