{
  "type": "record",
  "name": "Conversation",
  "namespace": "com.linkedin.voyager.messaging",
  "doc": "A conversation is between a set of participants and has a list of events. All events have same thread id on backend.",
  "fields": [
    {
      "name": "entityUrn",
      "type": "com.linkedin.voyager.common.ConversationUrn",
      "doc": "Identifier for this conversation"
    },
    {
      "name": "participants",
      "type": {
        "type": "array",
        "items": "com.linkedin.voyager.messaging.MessagingProfile"
      },
      "doc": "The participants in latest event in conversation minus current user"
    },
    {
      "name": "events",
      "type": {
        "type": "array",
        "items": "com.linkedin.voyager.messaging.Event"
      },
      "default": [],
      "doc": "List of latest events in this conversation"
    },
    {
      "name": "read",
      "type": "boolean",
      "doc": "Flag indicating whether thread is read or not"
    },
    {
      "name": "muted",
      "type": "boolean",
      "doc": "Muted flag denotes whether user receives notifications"
    },
    {
      "name": "unreadCount",
      "type": "int",
      "default": 0,
      "doc": "Current count of unread messages in this conversation"
    },
    {
      "name": "totalEventCount",
      "type": "int",
      "optional": true,
      "doc": "Total number of events in this conversation (Note: Number includes unsupported message types as well)"
    },
    {
      "name": "name",
      "type": "string",
      "optional": true,
      "doc": "Current name of the conversation as set by the participants"
    }
  ]
}
